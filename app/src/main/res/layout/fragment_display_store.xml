<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@drawable/bglayout"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:textSize="32sp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Jacko's Burgers"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:textStyle="bold"
            android:textSize="24dp"
            android:id="@+id/xbutton"
            android:background="@drawable/xbuttonback"
            android:layout_gravity="right" />
    </LinearLayout>

    <TextView
        android:id="@+id/store_website"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:gravity="left"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Website: "
        android:autoLink="web"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/store_pickles"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:textSize="26dp"
            android:paddingLeft="20dp"
            android:textColor="#114411"
            android:textStyle="bold"
            android:text="Pickles: 4.5/5"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:text="RATE"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/ratebutton"
            android:background="@drawable/listviewback"
            android:layout_gravity="right" />

    </LinearLayout>

    <ImageView
        android:id="@+id/store_image"
        android:layout_width="250dp"
        android:layout_height="188dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/back"/>

    <TextView
        android:id="@+id/store_address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address: 169 Queens Rd Connells Point 2221"
        />


</LinearLayout>